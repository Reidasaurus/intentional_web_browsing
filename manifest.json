{
  "background": {
      "scripts": ["background.js"]
  },

  "browser_action": {
      "default_title": "Your Web Reminders options"
  },

  "content_scripts": [
    { 
      "matches": ["*://*/*"],
      "js": ["checksite.js"]
    }
  ],

  "description": "A simple, customizable web page blocker.",
  "homepage_url": "https://github.com/Reidasaurus/your_web_reminders",
  "manifest_version": 2,
  "name": "Your Web Reminders",
  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },

  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "version": "1.0"
  
}
