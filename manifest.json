{
  "background": {
      "scripts": ["background.js"]
  },
  "browser_action": {
      "default_title": "Web reminder options"
  },
  "content_scripts": [
    {"js": ["checksite.js"]}
  ],
  "description": "A simple, customizable web page blocker",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/favourite-colour",
  "manifest_version": 2,
  "name": "Your Web Reminders",
  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },
  "permissions": ["storage"],
  "version": "1.1",
  "browser_specific_settings": {
      "gecko": {
          "id": "your-web-reminders@mozilla.org",
          "strict_min_version": "57.0a1"
      }
  }
}
